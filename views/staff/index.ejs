<main style="margin:10px">
  <table class="table table-striped-columns table-hover rounded" style="border:1px solid gray;text-align: center;">
    <tr style="color:tomato !important" >
      <th style="color:tomato !important">Staff ID</th>
      <th style="color:tomato !important">Staff Name</th>
      <th style="color:tomato !important">Staff Email</th>
      <th style="color:tomato !important">Department</th>
      <th style="color:tomato !important">Action</th>
    </tr>
    <% if(staffs[0]){ %>
      <tr>
        <td colspan="5" class="table-secondary" style="color: tomato;font-size: 22px;text-align: left;"><b>Waiting List</b></td>
      </tr>
    <% } %>
    <% staffs.map((staff)=>{ %>
      <tr>
        <td><%= staff.staff_id %></td>
        <td><%= staff.staff_name %></td>
        <td><%= staff.staff_email %></td>
        <td><%= staff.dept %></td>
        <td>
          <div style="display: flex;justify-content: space-evenly;align-items: center;">
            <form action="/staff/access" method="post" onsubmit="return confirm('Do you Want to give access?')">
              <input type="hidden" name="id" value="<%= staff.id %>">
              <button style="border: none;background:none">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill text-success" viewBox="0 0 16 16">
                  <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                </svg>
              </button>
            </form>

            <form action="/staff/delete" method="post" onsubmit="return confirm('Do you Want to delete?')">
              <input type="hidden" name="id" value="<%= staff.id %>">
              <button style="border: none;background:none" >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3 text-danger" viewBox="0 0 16 16">
                  <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                </svg>
              </button>
            </form>

          </div>
        </td>
      </tr>
    <% }) %>

    <% if(staffsList[0]){ %>
      <tr>
        <td colspan="5" class="table-secondary" style="color: tomato;font-size: 22px;text-align: left;"><b>Staff List</b></td>
      </tr>
    <% } %>
    <% staffsList.map((staff)=>{ %>
      <tr>
        <td><%= staff.staff_id %></td>
        <td><%= staff.staff_name %></td>
        <td><%= staff.staff_email %></td>
        <td><%= staff.dept %></td>
        <td>
          <div style="display: flex;justify-content: space-evenly;align-items: center;">

            <form action="/staff/delete" method="post" onsubmit="return confirm('Do you Want to delete?')">
              <input type="hidden" name="id" value="<%= staff.id %>">
              <button style="border: none;background:none" >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3 text-danger" viewBox="0 0 16 16">
                  <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                </svg>
              </button>
            </form>

          </div>
        </td>
      </tr>
    <% }) %>

  </table>
</main>


<div style="display:flex;height:50px;width:100%;position: fixed;bottom:0px;background-color: whitesmoke;border-top:1px solid gray">
  <div style="display: flex;justify-content:flex-start;width:100%;align-items: center;margin-left: 5px;">
    <span>Search :&ensp;</span>
    <form action="/staff" method="get">
      <input type="text" name="staff_id" placeholder="Staff ID" style="text-align:center;height:40px;width:180px;border: 1px solid gray;border-radius: 5px;">
      <input type="text" name="staff_name" placeholder="Staff Name" style="text-align:center;height:40px;width:180px;border: 1px solid gray;border-radius: 5px;">
      <button style="height:40px;width:180px;border: 1px solid gray;border-radius: 5px;">Search </button>
    </form>
  </div>
  <div style="display: flex;justify-content:flex-end;align-items:flex-end;width:50%;height:100%">
    <p style="margin-bottom: 10px;margin-right: 10px;">Total Staff : <%= total %></p>
  </div>
</div>

    
</body>
</html>